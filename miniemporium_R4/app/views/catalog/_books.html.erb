<dl id = 'books'>
  <% for book in @books %>
    <dt>
      <%= link_to book.title, :action => 'show', :id => book %>
      <%= link_to '+', :controller => 'cart', :action => 'add', :id => book %>
    </dt>
    <% for author in book.authors %>
      <dd><%= author.last_name %>, <%= author.first_name %></dd>
    <% end %>
    <dd><%= sprintf("%s. Price: %.2f â‚¬", pluralize(book.page_count, "page"), book.price) %> </dd>
    <dd><small>Publisher: <%= book.publisher.name %></small></dd>
  <% end %>
</dl>
