<table>
  <tr>
    <th><a href="?sort_by=publisher_id">Publisher</a></th>
    <th><a href="?sort_by=title">Title</a></th>
    <th>Tags</th>
    <th><a href="?sort_by=isbn">ISBN</a></th>
    <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= h book.publisher.name %></td>
    <td><%= h book.title %></td>
    <td><%= h book.isbn %></td>
    <td><%= link_to 'Show', :action => 'show', :id => book %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => book  %></td>
    <td><%= button_to 'Delete', { :action => 'destroy', :id => book },
                      data: { confirm: "Are you sure you want to delete book #{book.title}?" } %></td>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @books, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Previous page', :next_label => 'Next page' %>
<p><%= link_to 'Add a new book', :action => 'new' %></p>
